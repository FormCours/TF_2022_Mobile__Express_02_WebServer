extends ../shared/layout.pug

block content
    h1 Formulaire de contact 
    form(method="post") 
        div
            label(for="pseudo") Pseudo
            input#pseudo(type="text", name="pseudo", value=data.pseudo)
            if errors.pseudo
                span.error Le pseudo est obligatoire !
        div 
            label(for="message") Message
            textarea#message(name="message") #{data.message}
            if errors.message
                span.error Vous avez oublier le message :o
        div
            button(type="submit") Envoyer
